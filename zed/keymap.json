[
  {
    "context": "VimControl && !menu",
    "bindings": {
      "L": "vim::EndOfLineDownward",
      "A": "vim::StartOfLineDownward",
      "space x": "workspace::ToggleLeftDock",
      "g c": "editor::ToggleComments",
      "space f": "editor::Format",
      "space w": "editor::ToggleInlineDiagnostics",
      "space +": "editor::GoToDiagnostic",
      "space -": "editor::GoToPreviousDiagnostic",
      "space i": "editor::Hover",
      "ctrl-l": "pane::GoBack",
      "space p G": "workspace::NewSearch",
      "space p f": "file_finder::Toggle"
    }
  },

  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      "y": "vim::VisualYank",
      "Y": "vim::VisualYankLine",
      "K": "editor::MoveLineUp",
      "J": "editor::MoveLineDown"
    }
  },

  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "p": "editor::Paste",
      "space u": "vim::Undo",
      "space r": "vim::Redo",
      "space g r": "editor::FindAllReferences",
      "space g d": "editor::GoToDefinitionSplit",
      "Y": "vim::YankLine",
      "K": "editor::MoveLineUp",
      "J": "editor::MoveLineDown"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {}
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {}
  },

  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "alt-a": "editor::ContextMenuPrevious",
      "tab": "editor::ContextMenuNext"
    }
  }
]
